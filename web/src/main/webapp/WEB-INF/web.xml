        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.common.AuthFilter</filter-class>
        <init-param>
            <param-name>pathToIgnore</param-name>
            <param-value>registration:login:css:img:js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

