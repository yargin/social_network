<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsps/index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <default-content-type>"text/html; charset=UTF-8"</default-content-type>
        </jsp-property-group>
    </jsp-config>

    <filter>
        <filter-name>CharacterSetFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.CharacterSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterSetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.AuthFilter</filter-class>
        <init-param>
            <param-name>pathToIgnore</param-name>
            <param-value>registration:login:css:img</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>myWall</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.MyWallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>myWall</servlet-name>
        <url-pattern>/mywall</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.RegisterServlet</servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAccount</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAccount</servlet-name>
        <url-pattern>/deleteAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateAccount</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.UpdateAccountServlet</servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateAccount</servlet-name>
        <url-pattern>/updateInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groups</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.GroupsListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groups</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>
</web-app>
