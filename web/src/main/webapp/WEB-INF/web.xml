<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/font/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsps/index.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.common.AuthFilter</filter-class>
        <init-param>
            <param-name>pathToIgnore</param-name>
            <param-value>registration:login:css:img:js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CharacterSetFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.common.CharacterSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterSetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RequestedIdFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.idvalidation.IdValidationFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestedIdFilter</filter-name>
        <url-pattern>/updateinfo</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>
        <url-pattern>/group</url-pattern>
        <url-pattern>/updategroup</url-pattern>
        <url-pattern>/deletegroup</url-pattern>
        <url-pattern>/groupmembers</url-pattern>
        <url-pattern>/grouprequests</url-pattern>
        <url-pattern>/moderators</url-pattern>
        <url-pattern>/deletemessage</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>TwoRequestedIdFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.idvalidation.TwoIdValidationFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TwoRequestedIdFilter</filter-name>
        <url-pattern>/addfriend</url-pattern>
        <url-pattern>/acceptfriendship</url-pattern>
        <url-pattern>/removefriendship</url-pattern>
        <url-pattern>/acceptingroup</url-pattern>
        <url-pattern>/joingroup</url-pattern>
        <url-pattern>/leavegroup</url-pattern>
        <url-pattern>/addmoderator</url-pattern>
        <url-pattern>/removemoderator</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AccountPermissionsSetter</filter-name>
        <filter-class>
            com.getjavajob.training.yarginy.socialnetwork.web.filters.accountinfoaccess.AccountInfoAccessSetterFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccountPermissionsSetter</filter-name>

        <url-pattern>/updateinfo</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>

        <url-pattern>/addfriend</url-pattern>
        <url-pattern>/acceptfriendship</url-pattern>
        <url-pattern>/removefriendship</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>OwnerChecker</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.accountinfoaccess.OwnerCheckerFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OwnerChecker</filter-name>
        <url-pattern>/updateinfo</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>
        <url-pattern>/acceptfriendship</url-pattern>
        <url-pattern>/removefriendship</url-pattern>
    </filter-mapping>

    <!-- permissions for group-->
    <filter>
        <filter-name>GroupPermissionsSetter</filter-name>
        <filter-class>
            com.getjavajob.training.yarginy.socialnetwork.web.filters.groupinfoaccess.GroupInfoAccessSetterFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GroupPermissionsSetter</filter-name>
        <url-pattern>/group</url-pattern>
        <url-pattern>/groupmembers</url-pattern>
        <url-pattern>/grouprequests</url-pattern>
        <url-pattern>/moderators</url-pattern>
        <url-pattern>/acceptingroup</url-pattern>
        <url-pattern>/leavegroup</url-pattern>
        <url-pattern>/updategroup</url-pattern>
        <url-pattern>/deletegroup</url-pattern>
        <url-pattern>/addmoderator</url-pattern>
        <url-pattern>/removemoderator</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MemberModerOwnerChecker</filter-name>
        <filter-class>
            com.getjavajob.training.yarginy.socialnetwork.web.filters.groupinfoaccess.MemberModerOwnerCheckerFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MemberModerOwnerChecker</filter-name>
        <url-pattern>/groupmembers</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RequesterMemberOrModerOwnerChecker</filter-name>
        <filter-class>
            com.getjavajob.training.yarginy.socialnetwork.web.filters.groupinfoaccess.RequesterMemberOrModerOwnerChecker
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequesterMemberOrModerOwnerChecker</filter-name>
        <url-pattern>/leavegroup</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>ModerOwnerChecker</filter-name>
        <filter-class>
            com.getjavajob.training.yarginy.socialnetwork.web.filters.groupinfoaccess.ModerOwnerCheckerFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ModerOwnerChecker</filter-name>
        <url-pattern>/grouprequests</url-pattern>
        <url-pattern>/moderators</url-pattern>
        <url-pattern>/acceptingroup</url-pattern>
        <url-pattern>/updategroup</url-pattern>
        <url-pattern>/deletegroup</url-pattern>
        <url-pattern>/addmoderator</url-pattern>
        <url-pattern>/removemoderator</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.AccountRegisterServlet
        </servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.other.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.other.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAccount</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.AccountDeleteServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAccount</servlet-name>
        <url-pattern>/deleteAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateAccount</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.AccountUpdateServlet
        </servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateAccount</servlet-name>
        <url-pattern>/updateinfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groups</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.viewservlets.GroupsListServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groups</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groupWall</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.GroupWallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groupWall</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.GroupCreationServlet
        </servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>createGroup</servlet-name>
        <url-pattern>/creategroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.GroupUpdateServlet
        </servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateGroup</servlet-name>
        <url-pattern>/updategroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteGroup</servlet-name>
        <servlet-class>com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.GroupDeleteServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteGroup</servlet-name>
        <url-pattern>/deletegroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groupMembers</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.viewservlets.GroupMembersListServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groupMembers</servlet-name>
        <url-pattern>/groupmembers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groupMembersRequests</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.viewservlets.GroupMemberRequestsServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groupMembersRequests</servlet-name>
        <url-pattern>/grouprequests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groupModerators</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.viewservlets.GroupModeratorsListServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groupModerators</servlet-name>
        <url-pattern>/moderators</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createFriendshipRequest</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.viewservlets.FriendshipRequestCreationServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createFriendshipRequest</servlet-name>
        <url-pattern>/addfriend</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>acceptFriendshipRequest</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.FriendshipRequestAcceptServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>acceptFriendshipRequest</servlet-name>
        <url-pattern>/acceptfriendship</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeFriendship</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.FriendshipDeletionServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeFriendship</servlet-name>
        <url-pattern>/removefriendship</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>joinGroup</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.actionservlets.JoinGroupServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>joinGroup</servlet-name>
        <url-pattern>/joingroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>leavegroup</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.actionservlets.RemoveMemberServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>leavegroup</servlet-name>
        <url-pattern>/leavegroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>acceptGroupRequest</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.actionservlets.AcceptRequestServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>acceptGroupRequest</servlet-name>
        <url-pattern>/acceptingroup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addModerator</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.actionservlets.AddModeratorServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addModerator</servlet-name>
        <url-pattern>/addmoderator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>removeModerator</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.group.actionservlets.RemoveModeratorServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removeModerator</servlet-name>
        <url-pattern>/removemoderator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.other.SearchServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>jdbc/Local-MySql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <res-ref-name>jdbc/Heroku-Jaws</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
