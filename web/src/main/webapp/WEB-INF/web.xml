<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <absolute-ordering/>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/dispatcher-servlet.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/js/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/img/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/font/*</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <filter>
        <filter-name>CharacterSetFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.common.CharacterSetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterSetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RequestedIdFilter</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.idvalidation.IdValidationFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RequestedIdFilter</filter-name>
        <url-pattern>/updateinfo</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AccountPermissionsSetter</filter-name>
        <filter-class>
            com.getjavajob.training.yarginy.socialnetwork.web.filters.accountinfoaccess.AccountInfoAccessSetterFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccountPermissionsSetter</filter-name>

        <url-pattern>/updateinfo</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>OwnerChecker</filter-name>
        <filter-class>com.getjavajob.training.yarginy.socialnetwork.web.filters.accountinfoaccess.OwnerCheckerFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>OwnerChecker</filter-name>
        <url-pattern>/updateinfo</url-pattern>
        <url-pattern>/deleteAccount</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.AccountRegisterServlet
        </servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteAccount</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.AccountDeleteServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAccount</servlet-name>
        <url-pattern>/deleteAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateAccount</servlet-name>
        <servlet-class>
            com.getjavajob.training.yarginy.socialnetwork.web.servlets.accountpage.actionservlets.AccountUpdateServlet
        </servlet-class>
        <multipart-config>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateAccount</servlet-name>
        <url-pattern>/updateinfo</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>jdbc/Local-MySql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <resource-ref>
        <res-ref-name>jdbc/Heroku-Jaws</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
